<h1>単語作成</h1>
<%= form_for @question do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="form-group">
    <%= f.label :question, '単語' %>
    <%= f.text_field :question, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description, '説明' %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <p id="question_similar_qlus">類義語を追加+</p>
  <div class="question_similar_form" id="detail-association-insertion-point">
    <p style="color:orange;">類義語を2つまで一緒に登録できます</p>
    <%= f.fields_for :question_similars do |f| %>
      <%= f.label :similar_word, '類義語' %>
      <%= render 'question_similar_fields', f: f %>      
    <% end %>
    <p><%= link_to_add_association "追加する", f, :question_similars %></p>
  </div>
  <%= f.submit '作成', class: 'btn btn-primary form-control' %>
<% end %>
